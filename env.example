# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# Avatar Service Configuration
# =============================================================================

# ngrok Tunnel URL (REQUIRED for AWS connection)
# Get this by running: ngrok http 8000
# Example: https://abc123xyz.ngrok-free.app
AVATAR_SERVICE_URL=

# Avatar Service Authentication (RECOMMENDED)
# Set these to secure your avatar service
AVATAR_USERNAME=admin
AVATAR_PASSWORD=changeme_to_secure_password

# =============================================================================
# Video Quality Settings
# =============================================================================

# Options: fast, standard, high, ultra
# fast: 15-20s, 256px, no enhancement
# standard: 25-30s, 256px + GFPGAN
# high: 30-40s, 512px + GFPGAN (RECOMMENDED)
# ultra: 50-70s, 512px + all enhancements
VIDEO_QUALITY=high

# =============================================================================
# SadTalker Configuration
# =============================================================================

# Path to SadTalker installation
# Windows example: C:\Users\YourName\Downloads\SadTalker
# Linux example: /home/username/SadTalker
SADTALKER_PATH=

# =============================================================================
# Server Configuration
# =============================================================================

# Avatar service host and port
HOST=0.0.0.0
PORT=8000

# Avatar image path (relative to avatar_service directory)
AVATAR_IMAGE=luna_base.png

# =============================================================================
# Database Configuration (if using)
# =============================================================================

# Database URL for Django
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# =============================================================================
# API Keys (if needed)
# =============================================================================

# OpenAI API Key (if using GPT models)
OPENAI_API_KEY=

# Anthropic API Key (if using Claude)
ANTHROPIC_API_KEY=

# ElevenLabs API Key (if using premium TTS)
ELEVENLABS_API_KEY=

# =============================================================================
# AWS Configuration (if deploying to AWS)
# =============================================================================

# AWS Access Keys (if needed)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# Security Settings
# =============================================================================

# Django Secret Key (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
SECRET_KEY=

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# CORS Settings
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Notes
# =============================================================================

# 1. Copy this file to .env in the same directory
# 2. Fill in your actual values (remove the # comments if needed)
# 3. NEVER commit .env to git
# 4. Keep .env secure and backed up safely
# 5. Rotate secrets regularly
# 6. Use strong passwords for production

